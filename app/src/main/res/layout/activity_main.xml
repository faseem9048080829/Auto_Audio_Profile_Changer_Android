<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sartaj.autoapc.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Aname"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:textIsSelectable="false"
        android:id="@+id/textView"
        android:textColor="#f24058" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView">

        <Button
            android:layout_width="147dp"
            android:layout_height="152dp"
            android:text="@string/sound"
            android:id="@+id/btsound"

            android:background="@color/colorbtn"
            android:layout_gravity="center"
            android:onClick="goto2"
            />

        <Button
            android:background="@color/colorbtn"
            android:layout_width="147dp"
            android:layout_height="152dp"
            android:text="@string/silent"
            android:onClick="goto3"
            android:id="@+id/btsilent"
            android:layout_gravity="center_horizontal|bottom" />

        <Button
            android:background="@color/colorbtn"
            android:layout_width="147dp"
            android:layout_height="152dp"
            android:text="@string/Setvib"
            android:id="@+id/btvibrate"
            android:layout_gravity="center_horizontal|top"
            android:onClick="goto1" />


    </FrameLayout>

</RelativeLayout>
